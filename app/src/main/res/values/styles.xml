<resources>
    <style name="myTransparent" parent="AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Activity.Translucent.Style</item>
    </style>
    <style name="Animation.Activity.Translucent.Style" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/bottom_slid_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_slid_out</item>
    </style>
    <style name="AppTheme" parent="Base.AppTheme">
    </style>

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/style_color_primary</item>
        <item name="colorPrimaryDark">@color/style_color_primary_dark</item>
        <item name="colorAccent">@color/style_color_accent</item>
        <item name="android:windowBackground">@color/init_bg_color</item>
    </style>
    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon">@mipmap/back</item>
    </style>
    <style name="AppTheme.SimpleCoordinatorTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="AppTheme.Base.Widget.Design.NavigationView.Light" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/style_window_background_light</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        //一定要，否则有状态栏显示，不能全屏
        <item name="windowNoTitle">true</item>
    </style>

</resources>
